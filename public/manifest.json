{
  "name": "diesis",
  "description": "Add context to the web through the Knowledge Server Protocol (KSP).",
  "version": "0.1",
  "icons": { "144": "double-dagger.png" },
  "permissions": ["activeTab", "contextMenus", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "diesis@inkandswitch.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    "ui.html",
    "ui.css",
    "content.css",
    "double-dagger.svg",
    "md-icon.svg",
    "website-icon.svg",
    "link-solid.svg",
    "file-alt-solid.svg"
  ],
  "browser_action": {
    "default_title": "Context",
    "default_icon": {
      "144": "double-dagger.png"
    }
  },
  "commands": {
    "inspect-links": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Inspect links"
    },
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Toggles context plane"
    }
  },
  "manifest_version": 2
}
